{
  "name": "NodeView(flysher)",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main_electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron  .",
    "deploy:win": "webpack --config webpack.config.js && electron-builder --windows nsis:ia32 --publish never",
    "deploy:mac": "webpack --config webpack.config.js && electron-builder --mac --publish never",
    "deploy:mac-nosign": "webpack --config webpack.config.js && electron-builder --mac --config -c.mac.identity=null"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flysher/NodeView.git"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "@sentry/webpack-plugin": "^2.15.0",
    "electron": "^18.3.15",
    "electron-builder": "^23.0.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@sentry/electron": "^4.20.0",
    "animation-timeline-js": "^2.3.0",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^5.0.0",
    "image-data-uri": "^2.0.1"
  },
  "build": {
    "productName": "NodeView",
    "appId": "net.flysher.nodeview",
    "publish": {
      "provider": "github"
    },
    "asar": true,
    "protocols": {
      "name": "NodeView",
      "schemes": [
        "nodeview"
      ]
    },
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./build/icons/icon.icns"
    },
    "dmg": {
      "title": "NodeView",
      "icon": "./build/icons/icon.icns"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    },
    "files": [
      "./*",
      "./client/*",
      "./client/frameworks/**/*",
      "./client/res/**/*",
      "./client/src/**/*"
    ]
  }
}
